n=1
X1=matrix(rep(1,n), nrow=n)
X2=matrix(rnorm(n), nrow=n)
X3=matrix(rnorm(n), nrow=n)
y=matrix(rnorm(n), nrow=n)

X1X1=(t(X1)%*%X1)[1,1]
X1X2=(t(X1)%*%X2)[1,1]
X1X3=(t(X1)%*%X3)[1,1]
X2X2=(t(X2)%*%X2)[1,1]
X2X3=(t(X2)%*%X3)[1,1]
X3X3=(t(X3)%*%X3)[1,1]
X1y=(t(X1)%*%y)[1,1]
X2y=(t(X2)%*%y)[1,1]
X3y=(t(X3)%*%y)[1,1]

V=c(X1X1, X1X2, X1X3, X1y,
    X1X2, X2X2, X2X3, X2y,
    X1X3, X2X3, X3X3, X3y,
    X1y, X2y, X3y, 0)
M=matrix(V, nrow=4, byrow = TRUE)
det(M)
